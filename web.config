<?xml version="1.0" encoding="utf-8"?>
<configuration>
  <system.webServer>

    <!-- Map .js files to iisnode -->
    <handlers>
      <add name="iisnode" path="server.js" verb="*" modules="iisnode" />
    </handlers>

    <!-- Rewrite requests to server.js -->
    <rewrite>
      <rules>
        <!-- Static files: serve directly without going through Node.js -->
        <rule name="StaticContent" stopProcessing="true">
          <match url="^(public|css|js|images|faq)/.*" />
          <conditions>
            <add input="{REQUEST_FILENAME}" matchType="IsFile" />
          </conditions>
          <action type="None" />
        </rule>

        <!-- All other requests to Node.js -->
        <rule name="SendToNode" stopProcessing="true">
          <match url=".*" />
          <action type="Rewrite" url="server.js" />
        </rule>
      </rules>
    </rewrite>

    <!-- iisnode settings -->
    <iisnode
      node_env="production"
      nodeProcessCommandLine="node.exe"
      loggingEnabled="true"
      devErrorsEnabled="false"
      debuggingEnabled="false"
      watchedFiles="web.config;*.js"
      logDirectory="iisnode"
    />

    <!-- Pass through HTTP errors to Node.js -->
    <httpErrors existingResponse="PassThrough" />

    <!-- Disable default document since Express handles routing -->
    <defaultDocument>
      <files>
        <clear />
      </files>
    </defaultDocument>

    <!-- Static content caching for performance (7 days) -->
    <staticContent>
      <clientCache cacheControlMode="UseMaxAge" cacheControlMaxAge="7.00:00:00" />
    </staticContent>

  </system.webServer>
</configuration>
